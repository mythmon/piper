.row.spaced {
  &:not(:last-child) {
    margin-bottom: 10px
  }
}

border-color = #ddd;

.transaction-list {
  margin: 0;

  > li {
    list-style: none;
    padding: 2px;
    border-left: 1px solid border-color;
    border-right: 1px solid border-color;

    &:not(:first-child) {
      border-top: 1px solid border-color;
    }

    &:nth-child(2n+1) {
      background: #F9F9F9;
    }

    &.header {
      background-color: #F5F5F5;
      color: #000;
      font-weight: bold;
    }

    &:first-child {
        border-top: 1px solid border-color;
    }

    &:last-child {
        border-bottom: 1px solid border-color;
    }

    > div {
      > ul {
        margin: 0;

        > li {
          list-style: none;
          padding: 2px;
        }
      }
    }
  }
}

.tag {
  padding: 3px;
  background: #eee;
  border-radius: 1px;
  margin: 0 3px;
  font-size: 0.8em;
  box-shadow: 0px 0px 1px 0 rgba(0,0,0,0.5);
}