@font-face {
    font-family: 'entypo';
    src: url('/static/lib/entypo/entypo.eot');
    src: url('/static/lib/entypo/entypo.eot?#iefix') format('embedded-opentype'),
         url('/static/lib/entypo/entypo.woff') format('woff'),
         url('/static/lib/entypo/entypo.ttf') format('truetype'),
         url('/static/lib/entypo/entypo.svg#entypo') format('svg');
    font-weight: normal;
    font-style: normal;
}


border-color = #ddd;


.row.spaced {
  &:not(:last-child) {
    margin-bottom: 10px
  }
}

.object-list {
  margin: 0;

  .header {
    background-color: #F5F5F5;
    border: 1px solid border-color;
    color: #000;
    font-weight: bold;
    list-style: none;
  }

  .object {
    border-left: 1px solid border-color;
    border-right: 1px solid border-color;
    list-style: none;
    padding: 2px;
    position: relative;
    border-bottom: 1px solid border-color;

    &:nth-child(2n+1) {
      background: #F9F9F9;
    }

    .display {
      ul {
        margin: 0;

        li {
          list-style: none;
          padding: 2px;
        }
      }
    }

    .action-bar {
      position: absolute;
      right: 7px;
      top: 7px;
      cursor: pointer;

      .icon {
        cursor: pointer;
      }

      .edit.icon:hover { color: #00f; }
      .done.icon:hover { color: #0f0; }
      .delete.icon:hover { color: #f00; }
    }
  }
}

.tag {
  padding: 3px;
  background: #eee;
  border-radius: 1px;
  margin: 0 3px;
  font-size: 0.8em;
  box-shadow: 0px 0px 1px 0 rgba(0,0,0,0.5);
}

.icon {
  font-family: "entypo";
  font-size: 2em;
  line-height: 0.5em; 
  transition: 0.5s all;

  &.pencil:before { content: "\270e"; }
  &.check:before { content: "\2713"; }
  &.ex:before { content: "\274C"; }
  &.search:before { content: "\1F50D"; }
}


/* Override Foundation's opinion that focused elements should not be
 * marked invalid for the search field. */
form[name=search] {
  input {
    transition: background-color 0.5s;
    background-color: rgba(198, 15, 19, 0.0);

    &.error {
      background-color: rgba(198, 15, 19, 0.1);

      &:focus {
        background-color: rgba(198, 15, 19, 0.05);
        border-color: #c60f13;
      }
    }

    &.error ~ small {
      color: #c60f13;
    }
  }
}


.progress-bar {
  border: 1px solid;
  display: inline-block;
  height: 1em;
  width: 100%;

  .inner {
    background: #00f;
    height: 100%;
  }
}